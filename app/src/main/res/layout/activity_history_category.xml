<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".UI.HistoryCategory">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subject Exam"
            android:textAllCaps="true"
            android:onClick="SubjectExam2"
            android:background="@drawable/input_design"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#fff"
            android:padding="20dp"
            android:gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aptitude Test"
            android:textAllCaps="true"
            android:onClick="AptitudeTest2"
            android:textSize="20sp"
            android:textColor="#fff"
            android:padding="20dp"
            android:background="@drawable/input_design"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reasoning Test"
            android:textAllCaps="true"
            android:onClick="ReasoningTest2"
            android:textSize="20sp"
            android:textColor="#fff"
            android:background="@drawable/input_design"
            android:textStyle="bold"
            android:padding="20dp"
            android:gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verbal Test"
            android:textAllCaps="true"
            android:onClick="VerbalTest2"
            android:textSize="20sp"
            android:textColor="#fff"
            android:background="@drawable/input_design"
            android:textStyle="bold"
            android:padding="20dp"
            android:gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"/>

    </LinearLayout>
</RelativeLayout>